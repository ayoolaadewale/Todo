<%= form_for @task do |f| %>
    <%= render 'error_list', object: @task %>
    <%= f.label "Title:" %><br>
    <%= f.text_field :title %><br>

    <%= f.label "Details:" %><br>
    <%= f.text_area :details %><br>
    <%= f.label "Completed?" %>
    <%= f.check_box :completed %><br>


    <%= f.submit("Create", class: "btn") %>


<% end %> 